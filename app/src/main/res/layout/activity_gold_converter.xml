<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFF8E1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convertisseur - Métaux précieux"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_card"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/inputGoldAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Montant en Dinar (DT)"
                android:inputType="numberDecimal"
                android:layout_marginBottom="12dp"/>

            <Spinner
                android:id="@+id/spinnerMetal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnConvertGold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Convertir"
                android:backgroundTint="#B8860B"
                android:textColor="#FFF" />

            <TextView
                android:id="@+id/resultGold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Résultat :"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="14dp"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
